<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.trjoxuvw.manualrecurrencetasks">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="Main"
            android:launchMode="singleTask"
            android:taskAffinity="">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TagsActivity"
            android:label="Tags"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".AddRecordActivity"
            android:label="Add / edit"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".DebugActivity"
            android:label="Debug"
            android:launchMode="singleInstance"
            android:taskAffinity="">
        </activity>

        <receiver android:name="notification.NotificationBroadcastReceiver">
            <intent-filter>
                <action android:name="ru.trjoxuvw.manualrecurrencetasks.SHOW" />
            </intent-filter>
        </receiver>

        <receiver android:name="notification.BootCompletedBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>